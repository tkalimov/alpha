<li id="<%= feed_item.id %>">
    <div class="row">
      <%= link_to image_tag(feed_item.user.avatar.url(:thumb), class: "feed-thumb"), feed_item.user %>
      <%= link_to feed_item.user.name, feed_item.user %>
    </div>
    <div class="row">
      <div class="content lead col-xs-2"><%= feed_item.content %></div>
    </div>
    <% unless feed_item.posted_image_file_name.nil? %>
      <div class="row"> 
          <div class="col-xs-2">
            <%= image_tag feed_item.posted_image.url, class: "feed-image" %>
          </div>
      </div>
    <% end %>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</li>