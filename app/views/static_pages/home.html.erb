<% if signed_in? %>
  <div class="row">
    <div class="col-lg-6">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%#= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </div>
    <div class="col-lg-8">
      <h2>Your location: Williamsburg</h2>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the TBD Ventures Alpha site</h1>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>